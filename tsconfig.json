{
  "compilerOptions": {
    "moduleResolution": "node",
    "noImplicitAny": true,
    "target": "ES2021",
    "rootDir": ".",
    "outDir": "build",
    "baseUrl": "./",
    "paths": {
      "@/*": ["src/*"],
      "@common/*": ["src/common/*"],
      "@controllers/*": ["src/controllers/*"],
      "@plugins/*": ["src/plugins/*"],
      "@routes/*": ["src/routes/*"],
      "@utils/*": ["src/utils/*"]
    },
    "lib": [
      "es2021",
      "dom"
    ]
  },
  "include": [
    "src/**/*.ts",
    "src/*.ts"
  ],
  "exclude": [
    "node_modules",
    "build"
  ]
}
